<header>
    <a href="/">
        <span> &#60; the hex /&#62; </span>
    </a>
    <% if(locals.user) { %>
        <div id='search-user'  style="height: 100%;">
            <form  action="/users/search" method="POST">
                <input class="form-control" type="text" name="search_user" placeholder="Search user">
                <button type="submit" >
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    <%}%>


    <div class="routes d-flex justify-content-between align-items-center" style="width: 20%;">

        <% if(!locals.user) { %>

            <a href="/users/signup" class="profile-nav">
                <span class="nav-text">Sign up</span>
            </a>
            <a href="/users/signin" class="profile-nav">
                <span class="nav-text">Sign in</span>
            </a>



            <%} else { %>
                <div style="width: 100%;">
                    <a href="/users/profile/<%=user.id%>" class="profile-nav">
                        <img src="<%=user.avatar%>" alt="" width="35" height="35" style="border-radius: 100px;">
                        <!-- <a  href="/users/profile/<%=user.id%>"><%=user.name%></a> -->
                        <span class="nav-text">
                            <%=user.name.split(' ')[0]%>
                        </span>
                    </a>
                    <a href="/users/signout" class="profile-nav">
                        <!-- <a  href="/users/signout">Sign Out</a> -->
                        <span class="nav-text">Sign out</span>
                    </a>
                </div>
                <%} %>
    </div>
</header>