<div class="parent-div" style="background-image: url( <%= assetPath('images/milkyway.jpeg') %>) !important;" > 
    
    <div class='form-container'>
        <h5 style="text-align: center;">Reset your password</h5>    
        <p style="font-size: smaller;">
            Enter your user account's verified email address and we will send you a password reset link.
        </p>
        <form action="/reset-password" method="POST" style="margin-top: 10%;">
            <input class="width-100" type="email" id="email" name="email" placeholder="Email address">
            <input class="width-100" type="submit" value="Send password reset email" style="background-color: #4ba550; color: white;">
        </form>
    </div>
</div>

<%- include("footer"); %>