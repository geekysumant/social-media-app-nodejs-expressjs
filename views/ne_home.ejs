 <div id="post-container">
     <div id="post">
        <section id="feed-posts" class="mt-4 d-flex justify-content-center">
            <% if(locals.user) {%>
            <div class= "card p-2" style="width: 52%" >
                <form action="/posts/create" id="new-post-form" method="POST">
                    <div class="form-group d-flex flex-column align-items-center">
                        <div class="d-flex justify-content-between align-items-center"  style="width: 100%;">
                            <div>
                                <img src="<%=user.avatar%>" alt="" width="60" height="60" style="border-radius: 100px;">
                            </div>    
                            <textarea class="mb-3 mt-3" style=" outline: none;resize: none;background-color: #f0f2f5;padding: 3% ; border-radius: 50px;"  name="content" cols="45" rows="2" placeholder="What's on your mind, <%=user.name%> ?"></textarea>
                        </div>
                        
                        <button class=" mb-2 btn btn-success" type="submit" value="Post">Post</button>
                    </div>
                   
                </form>
            </div>
            <% } %>
        </section>

        <div id="posts-list-container" class="d-flex flex-column align-items-center mt-5" >
            <% for(p of posts){ %>
            <%- include('posts') -%>
            <% } %>
        </div>
    </div>
    <% if(locals.user){ %>
        <section id="friends">
            <h5>Friends</h5>
            <div class="d-flex flex-column">
                <% for( u of users) { %>
                    <a class="friend-list" style="text-decoration: none;" href="/users/profile/<%=u.id%>"><%=u.name%></a>
                <%} %> 
            </div>
        </section>
    <% } %>
</div>   
<script src="/js/home_posts_comments.js"></script>
<script src="/js/makeposts.js"></script>
